#include <stdio.h>

int main() {
    int n;
    int arr[100][100];
    int i, j, k, temp;

    // Input size of square matrix
    printf("Enter size of square matrix (n x n): ");
    scanf("%d", &n);

    // Input matrix
    printf("Enter the elements:\n");
    for (i = 0; i < n; i++) {
        for (j = 0; j < n; j++) {
            scanf("%d", &arr[i][j]);
        }
    }

    // Step 1: Transpose the matrix
    for (i = 0; i < n; i++) {
        for (j = i; j < n; j++) {
            // Swap arr[i][j] and arr[j][i]
            temp = arr[i][j];
            arr[i][j] = arr[j][i];
            arr[j][i] = temp;
        }
    }

    // Step 2: Reverse each row
    for (i = 0; i < n; i++) {
        for (j = 0, k = n - 1; j < k; j++, k--) {
            // Swap elements in the row
            temp = arr[i][j];
            arr[i][j] = arr[i][k];
            arr[i][k] = temp;
        }
    }

    // Print rotated matrix
    printf("\nMatrix after 90-degree rotation:\n");
    for (i = 0; i < n; i++) {
        for (j = 0; j < n; j++) {
            printf("%d ", arr[i][j]);
        }
        printf("\n");
    }

    return 0;
}
output:
Enter size of square matrix (n x n): 3
Enter the elements:
1 2 3
3 4 5
5 6 7

Matrix after 90-degree rotation:
5 3 1 
6 4 2 
7 5 3 
