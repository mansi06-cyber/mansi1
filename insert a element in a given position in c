#include<stdio.h>
int main()
{
    int i;int j;int n;int arr[100];int ele;int pos;
    printf("enter size:");
    scanf("%d",&n);
    for(i=0;i<n;i++){
    printf("enter elements in %d:",i+1);
    scanf("%d",&arr[i]);
    }
    for(i=0;i<n;i++)
    {
        printf("enter element to be inserted :");
        scanf("%d",&ele);
        printf("enter position:");
        scanf("%d",&pos);
        for(i=n;i>=pos;i--)
        {
       arr[i] = arr[i - 1];
        }
        arr[pos - 1] = ele;
        n++;
        for(i=0;i<n;i++)
        {
        printf("%d",arr[i]);
    }
    printf("\n");
}

return 0;
}
        
    output:
